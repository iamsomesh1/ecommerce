<% if user_signed_in? && current_user.type != "Admin" %>
	 <h4>Your order details</h4> </br>
		<% current_user.orders.each do |order| %>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">Your Order ID</th>
				</tr>
			</thead>
			<tr>
				<td><%= order.id %></td>
			</tr>
		</table>
	<% end %>
<% else %>
<h4>All orders Details</h4>
	<% @orders.each do |order| %>
	<table class="table">
  <thead>
    <tr>
    	<th scope="col">User ID</th>
    	<th scope="col">Customer Name</th>
    	<th scope="col">Email</th>
    	<th scope="col">Phone No</th>
      <th scope="col">Order ID</th>
      <th scope="col">Date-Time</th>
    </tr>
  </thead>
  <tr>
  	
  	<td><%= order.user_id %></td>
  	<% user = User.find(order.user_id) %>
  	<td><%= user.username %></td>
  	<td><%= user.email %></td>
  	<td><%= user.mobile %></td>
    <td><%= order.id %></td>
    <td><%= order.created_at %></td>
  </tr>
	</table>
	<% end %>		
	</br>
		<% if @page.present? %>
		  <div>
		    <% if @page > 0 %>
		    <%= link_to "Last Page", orders_path(page: @page - 1) %> |
		    <% end %>
		    <%= link_to "Next Page", orders_path(page: @page + 1) %>
		  </div>
		<% end %>
<% end %>


