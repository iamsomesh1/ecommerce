<% if user_signed_in? && current_user.type != "Admin"%>
<details>
  <summary>Cart</summary>
  <ul>
    <% if @cart&.cart_items&.empty? %>
    <p> No items in cart</p>
    <% else %>
    <% @cart.cart_items.each do |cart_item| %>
<table class="table">
  <thead>
    <tr></tr>
      <th scope="col">Product Name</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tr>
    <%#byebug%>
      <td><%= cart_item.product.product_name %></td>
      <td><%= cart_item.quantity %></td>
      <td><%=  cart_item.total %></td>
      <td><%= link_to 'Remove Item',  cart_remove_from_cart_path(item_id: cart_item.id, cart_id: current_user.cart.id), :method => :post %></td>
       <% end %>
    </tr>
</table>
     <hr>
      <p>Total <%= @cart.total_price %></p>
      <%= button_to 'Pay', orders_path(user_id: current_user.id), :method => :post, data: { confirm: 'Are you sure? to placed order' } %>
      <% end %>
</details>
<% end %>